{
  "manifest_version": 2,

  "name": "YouTube Fav List",
  "description": "Myjcie rÄ…czki",
  "version": "1.0",
  "icons": {
    "512": "icon_512.png"
  },
  "browser_action": {
    "default_icon": "icon_32.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "js/vendor.js",
      "js/contentScript.js"
    ],
    "run_at": "document_end"
  }],

  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },

  "permissions": ["storage", "activeTab", "tabs"]
}